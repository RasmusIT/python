import turtle
kylje_pikkus = 50            
nurk = 90                   
kujundi_varv = "blue"       


t = turtle.Turtle()
t.pensize(2)
t.pencolor(kujundi_varv)
t.speed(5)


for i in range(3):

    for _ in range(4):
        t.forward(kylje_pikkus)
        t.right(nurk)
    t.penup()
    t.forward(kylje_pikkus * 1.5)
    t.pendown()
    t.hideturtle()
turtle.done()
